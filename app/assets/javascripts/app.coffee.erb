      .when("/",
        templateUrl: "<%= asset_path 'templates/index.html' %>"
        controller: "RecipesController"
      )
])

controllers = angular.module("tzControllers",[])
controllers.controller("RecipesController", [ "$scope",
  ($scope)->
])
